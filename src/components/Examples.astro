---
interface Example {
  name: string;
  type: string;
  description: string;
  github?: string;
  isPlaceholder?: boolean;
}

const examples: Example[] = [
  {
    name: "ClaudeApp",
    type: "macOS App",
    description:
      "A native macOS menu bar app for monitoring Claude Code usage limits with real-time tracking.",
    github: "https://github.com/whatiskadudoing/claudeapp",
  },
  {
    name: "Your Project?",
    type: "Coming Soon",
    description:
      "Built something with Ralph Vibe? We'd love to feature it here. The community is just getting started.",
    github: "https://github.com/whatiskadudoing/ralph-vibe",
    isPlaceholder: true,
  },
];
---

<section class="examples" aria-labelledby="examples-heading">
  <div class="container">
    <h2 id="examples-heading" class="section-heading">Built with Ralph</h2>
    <p class="section-subheading">
      Real projects built autonomously. Describe &rarr; Walk away &rarr; Working
      code.
    </p>

    <ul class="examples-grid" role="list">
      {
        examples.map((example) => (
          <li class="example-card">
            <div class="example-header">
              <h3 class="example-name">{example.name}</h3>
              <span class="example-type">{example.type}</span>
            </div>
            <p class="example-description">{example.description}</p>
            <a
              href={example.github}
              target="_blank"
              rel="noopener noreferrer"
              class="example-link"
            >
              <svg
                class="github-icon"
                width="16"
                height="16"
                viewBox="0 0 16 16"
                fill="currentColor"
                aria-hidden="true"
              >
                <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z" />
              </svg>
              {example.isPlaceholder ? "Share Your Project" : "View on GitHub"}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
  .examples {
    padding: var(--space-7) var(--space-3);
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .section-heading {
    font-family: var(--font-sans);
    font-size: clamp(1.5rem, 4vw, var(--text-section));
    font-weight: 600;
    text-align: center;
    margin: 0 0 var(--space-2);
    color: var(--text-primary);
    letter-spacing: -0.01em;
  }

  .section-subheading {
    font-family: var(--font-sans);
    font-size: 1rem;
    color: var(--text-secondary);
    text-align: center;
    margin: 0 0 var(--space-6);
  }

  .examples-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-4);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .example-card {
    padding: var(--space-5);
    background: var(--output);
    border-radius: 16px;
    /* Industrial shadow - solid black, no blue tint */
    box-shadow:
      0 20px 40px rgba(0,0,0,0.35),
      0 8px 16px rgba(0,0,0,0.25);
    /* Edge highlight for physical presence */
    border-top: var(--edge-top);
    display: flex;
    flex-direction: column;
    position: relative;
    transition: transform var(--duration-micro) var(--ease-out),
                box-shadow var(--duration-micro) var(--ease-out);
  }

  /* Subtle paper texture effect */
  .example-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0,0,0,0.01) 2px,
      rgba(0,0,0,0.01) 4px
    );
    border-radius: inherit;
    pointer-events: none;
    opacity: 0.5;
  }

  .example-card:hover {
    transform: translateY(-4px);
    box-shadow:
      0 24px 48px rgba(0,0,0,0.45),
      0 12px 24px rgba(0,0,0,0.35);
  }

  .example-header {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-2);
    flex-wrap: wrap;
  }

  .example-name {
    font-family: var(--font-sans);
    font-size: var(--text-card-title);
    font-weight: 600;
    margin: 0;
    /* Dark text on light output card */
    color: var(--void);
    letter-spacing: -0.01em;
  }

  /* Bracketed type badge - industrial classification */
  .example-type {
    font-family: var(--font-mono);
    font-size: var(--text-bracket);
    font-weight: 500;
    padding: 0;
    background: none;
    color: var(--bracket);
    letter-spacing: 0.02em;
  }

  /* Add brackets via pseudo-elements */
  .example-type::before {
    content: '[';
  }

  .example-type::after {
    content: ']';
  }

  .example-description {
    font-family: var(--font-sans);
    font-size: 0.9375rem;
    /* Muted dark text for descriptions */
    color: rgba(12, 12, 12, 0.7);
    margin: 0 0 var(--space-3);
    line-height: 1.6;
    flex-grow: 1;
  }

  .example-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-family: var(--font-sans);
    font-size: var(--text-code);
    font-weight: 500;
    color: var(--signal);
    text-decoration: none;
    transition: color var(--duration-micro) var(--ease-out);
  }

  .example-link:hover {
    color: var(--signal-dim);
  }

  .github-icon {
    flex-shrink: 0;
  }

  /* Tablet: side-by-side */
  @media (min-width: 768px) {
    .examples {
      padding: var(--space-8) var(--space-5);
    }

    .examples-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-5);
    }

    .example-card {
      padding: var(--space-5);
    }
  }

  /* Desktop: slightly larger spacing */
  @media (min-width: 1024px) {
    .examples-grid {
      gap: var(--space-6);
    }

    .example-card {
      padding: var(--space-6);
    }

    .example-name {
      font-size: 1.25rem;
    }
  }
</style>
