<style>
  .features {
    padding: 4rem 1rem;
    background: white;
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .section-heading {
    font-size: clamp(1.5rem, 4vw, 2.25rem);
    font-weight: 700;
    text-align: center;
    margin: 0 0 3rem;
    color: var(--color-text);
  }

  .feature-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .feature-card {
    padding: 1.5rem;
    background: var(--color-surface);
    border-radius: 12px;
    border: 1px solid var(--color-border);
  }

  .feature-icon {
    font-size: 1.75rem;
    margin-bottom: 0.75rem;
  }

  .feature-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 0.5rem;
    color: var(--color-text);
  }

  .feature-description {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.5;
  }

  /* Tablet: 2x2 grid */
  @media (min-width: 768px) {
    .features {
      padding: 5rem 2rem;
    }

    .feature-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .feature-card {
      padding: 1.75rem;
    }
  }

  /* Desktop: slightly larger spacing */
  @media (min-width: 1024px) {
    .feature-grid {
      gap: 2rem;
    }

    .feature-card {
      padding: 2rem;
    }

    .feature-title {
      font-size: 1.25rem;
    }
  }
