---
import InstallCommand from './InstallCommand.astro';

const githubUrl = 'https://github.com/whatiskadudoing/ralph-vibe';
const docsUrl = 'https://github.com/whatiskadudoing/ralph-vibe-docs';
---

<footer class="footer" aria-labelledby="footer-heading">
  <div class="container">
    <h2 id="footer-heading" class="footer-heading">Ready to build while AFK?</h2>
    <p class="footer-tagline">Run it. Go for beer. Come back to code.</p>

    <div class="install-block">
      <InstallCommand />
    </div>

    <div class="footer-links">
      <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="footer-link">
        <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
          <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
        </svg>
        View on GitHub
      </a>
      <a href={docsUrl} target="_blank" rel="noopener noreferrer" class="footer-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
          <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
        </svg>
        Read the docs
      </a>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: var(--space-7) var(--space-3);
    /* Continues the void background, consistent with other sections */
    text-align: center;
  }

  .container {
    max-width: 640px;
    margin: 0 auto;
  }

  .footer-heading {
    font-family: var(--font-sans);
    font-size: clamp(1.5rem, 4vw, var(--text-section));
    font-weight: 600;
    margin: 0 0 var(--space-2);
    color: var(--text-primary);
    letter-spacing: -0.01em;
  }

  .footer-tagline {
    font-family: var(--font-sans);
    font-size: clamp(1rem, 2.5vw, 1.125rem);
    color: var(--text-secondary);
    margin: 0 0 var(--space-6);
  }

  .install-block {
    margin-bottom: var(--space-4);
  }

  .footer-links {
    display: flex;
    justify-content: center;
    gap: var(--space-5);
  }

  /* Ghost button style links */
  .footer-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-3);
    background: transparent;
    border: 1px solid var(--concrete);
    border-radius: 8px;
    font-family: var(--font-sans);
    font-size: var(--text-code);
    font-weight: 500;
    color: var(--text-primary);
    text-decoration: none;
    transition: border-color var(--duration-micro) var(--ease-out),
                color var(--duration-micro) var(--ease-out);
  }

  .footer-link:hover {
    border-color: var(--signal);
    color: var(--signal);
  }

  .footer-link:focus-visible {
    outline: none;
    box-shadow: var(--shadow-focus), var(--shadow-signal-glow);
  }

  /* Mobile */
  @media (max-width: 640px) {
    .footer {
      padding: var(--space-6) var(--space-3);
    }

    .footer-links {
      flex-direction: column;
      gap: var(--space-3);
    }

    .footer-link {
      justify-content: center;
    }
  }

  /* Tablet and up */
  @media (min-width: 768px) {
    .footer {
      padding: var(--space-8) var(--space-5);
    }
  }
</style>
