---
import CopyButton from './CopyButton.astro';

const installCommand = 'curl -fsSL https://raw.githubusercontent.com/whatiskadudoing/ralph-vibe/main/install.sh | sh';
const githubUrl = 'https://github.com/whatiskadudoing/ralph-vibe';
---

<footer class="footer" aria-labelledby="footer-heading">
  <div class="container">
    <h2 id="footer-heading" class="footer-heading">Ready to build while AFK?</h2>
    <p class="footer-tagline">Run it. Go for beer. Come back to code.</p>

    <div class="install-block">
      <div class="code-wrapper">
        <code class="install-command">{installCommand}</code>
        <CopyButton text={installCommand} />
      </div>
    </div>

    <div class="footer-links">
      <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="footer-link">
        <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
          <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
        </svg>
        View on GitHub
      </a>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 4rem 1rem;
    background: var(--color-surface);
    text-align: center;
  }

  .container {
    max-width: 640px;
    margin: 0 auto;
  }

  .footer-heading {
    font-size: clamp(1.5rem, 4vw, 2.25rem);
    font-weight: 700;
    margin: 0 0 0.75rem;
    color: var(--color-text);
  }

  .footer-tagline {
    font-size: clamp(1rem, 2.5vw, 1.125rem);
    color: var(--color-text-muted);
    margin: 0 0 2rem;
  }

  .install-block {
    margin-bottom: 1.5rem;
  }

  .code-wrapper {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: #1e1e2e;
    border-radius: 8px;
    padding: 0.75rem 1rem;
  }

  .install-command {
    flex: 1;
    min-width: 0;
    font-family: ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, monospace;
    font-size: clamp(0.75rem, 2vw, 0.9rem);
    color: #cdd6f4;
    white-space: nowrap;
    text-align: left;
    overflow-x: auto;
    scrollbar-width: thin;
    scrollbar-color: #45475a #1e1e2e;
  }

  .install-command::-webkit-scrollbar {
    height: 4px;
  }

  .install-command::-webkit-scrollbar-track {
    background: #1e1e2e;
  }

  .install-command::-webkit-scrollbar-thumb {
    background: #45475a;
    border-radius: 2px;
  }

  .code-wrapper :global(.copy-button) {
    flex-shrink: 0;
    background: #313244;
    border-color: #45475a;
    color: #cdd6f4;
  }

  .code-wrapper :global(.copy-button:hover) {
    background: #45475a;
    border-color: #585b70;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
  }

  .footer-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color 0.15s;
  }

  .footer-link:hover {
    color: var(--color-primary);
  }

  .footer-link:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
    border-radius: 4px;
  }

  /* Mobile */
  @media (max-width: 640px) {
    .footer {
      padding: 3rem 1rem;
    }

    .code-wrapper {
      flex-direction: column;
      align-items: stretch;
      gap: 0.75rem;
      padding: 1rem;
    }

    .install-command {
      overflow-x: auto;
      padding-bottom: 0.5rem;
    }

    .code-wrapper :global(.copy-button) {
      width: 100%;
      justify-content: center;
    }
  }

  /* Tablet and up */
  @media (min-width: 768px) {
    .footer {
      padding: 5rem 2rem;
    }
  }
</style>
