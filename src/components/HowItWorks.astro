    description: "Write code until done",
    icon: "üî®",
  },
];
---

<section class="how-it-works" aria-labelledby="how-it-works-heading">
  <div class="container">
    <h2 id="how-it-works-heading" class="section-heading">How It Works</h2>

    <ol class="steps" role="list">
      {steps.map((step, index) => (
        <>
          <li class="step">
            <div class="step-icon" aria-hidden="true">{step.icon}</div>
            <h3 class="step-label">{step.label}</h3>
            <p class="step-description">{step.description}</p>
          </li>
          {index < steps.length - 1 && (
            <li class="arrow" aria-hidden="true">
              <svg class="arrow-horizontal" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14M12 5l7 7-7 7" />
              </svg>
              <svg class="arrow-vertical" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 5v14M5 12l7 7 7-7" />
              </svg>
            </li>
          )}
        </>
      ))}
    </ol>

    <p class="vibe-callout">
      With <code>--vibe</code>, it chains automatically. One command, zero babysitting.
    </p>
  </div>
</section>

<style>
  .how-it-works {
    padding: 4rem 1rem;
    background: var(--color-surface);
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .section-heading {
    font-size: clamp(1.5rem, 4vw, 2.25rem);
    font-weight: 700;
    text-align: center;
    margin: 0 0 3rem;
    color: var(--color-text);
  }

  .steps {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    list-style: none;
    padding: 0;
    margin: 0 0 2rem;
  }

  .step {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 1.5rem;
    background: white;
    border-radius: 12px;
    border: 1px solid var(--color-border);
    width: 100%;
    max-width: 200px;
  }

  .step-icon {
    font-size: 2rem;
    margin-bottom: 0.75rem;
  }

  .step-label {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 0.5rem;
    color: var(--color-text);
  }

  .step-description {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.4;
  }

  .arrow {
    color: var(--color-text-muted);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .arrow-horizontal {
    display: none;
  }

  .arrow-vertical {
    display: block;
  }

  .vibe-callout {
    text-align: center;
    font-size: 1rem;
    color: var(--color-text-muted);
    margin: 0;
    padding: 1rem;
    background: white;
    border-radius: 8px;
    border: 1px solid var(--color-border);
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .vibe-callout code {
    font-family: ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, monospace;
    background: var(--color-surface);
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-size: 0.9em;
    color: var(--color-text);
  }

  /* Tablet and up: horizontal flow */
  @media (min-width: 768px) {
    .how-it-works {
      padding: 5rem 2rem;
    }

    .steps {
      flex-direction: row;
      justify-content: center;
      align-items: stretch;
      gap: 0.5rem;
    }

    .step {
      flex: 0 1 160px;
    }

    .arrow-horizontal {
      display: block;
    }

    .arrow-vertical {
      display: none;
    }
  }

  /* Desktop: slightly larger */
  @media (min-width: 1024px) {
    .steps {
      gap: 1rem;
    }

    .step {
      flex: 0 1 180px;
      padding: 1.75rem;
    }
  }
</style>
