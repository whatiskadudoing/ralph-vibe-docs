---
import LoadingScreen from './LoadingScreen.astro';
import WebGLBackground from './WebGLBackground.astro';
import ScrollIndicator from './ScrollIndicator.astro';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>

  <title>{title}</title>

  <!-- Google Fonts: Space Grotesk (primary) + JetBrains Mono (code) -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;700&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Canonical -->
  <link rel="canonical" href={canonicalURL}>

  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:image" content={new URL(`${import.meta.env.BASE_URL}/og-image.png`, Astro.site)}>

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={new URL(`${import.meta.env.BASE_URL}/og-image.png`, Astro.site)}>

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`}>
  <link rel="icon" type="image/png" sizes="32x32" href={`${import.meta.env.BASE_URL}/favicon-32.png`}>
  <link rel="apple-touch-icon" href={`${import.meta.env.BASE_URL}/favicon-32.png`}>
</head>
<body>
  <LoadingScreen />
  <WebGLBackground />

  <a href="#main-content" class="skip-to-main">Skip to main content</a>

  <!-- Industrial corner marks - fixed position frame -->
  <div class="corner-marks" aria-hidden="true">
    <div class="corner-mark corner-mark--top-left"></div>
    <div class="corner-mark corner-mark--top-right"></div>
    <div class="corner-mark corner-mark--bottom-left"></div>
    <div class="corner-mark corner-mark--bottom-right"></div>
  </div>

  <ScrollIndicator />

  <main id="main-content">
    <slot />
  </main>

  <script>
    import '../scripts/alche/main';
    import { initTextEffects } from '../scripts/text-effects';

    // Initialize text effects after page load
    document.addEventListener('DOMContentLoaded', () => {
      initTextEffects();
    });
  </script>
</body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>

<style>
  /* Industrial corner marks - ambient industrial framing */
  .corner-marks {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 10;
  }

  .corner-mark {
    position: absolute;
    width: 20px;
    height: 20px;
    border-color: var(--concrete);
    border-style: solid;
    border-width: 0;
  }

  .corner-mark--top-left {
    top: var(--space-4);
    left: var(--space-4);
    border-top-width: 1px;
    border-left-width: 1px;
  }

  .corner-mark--top-right {
    top: var(--space-4);
    right: var(--space-4);
    border-top-width: 1px;
    border-right-width: 1px;
  }

  .corner-mark--bottom-left {
    bottom: var(--space-4);
    left: var(--space-4);
    border-bottom-width: 1px;
    border-left-width: 1px;
  }

  .corner-mark--bottom-right {
    bottom: var(--space-4);
    right: var(--space-4);
    border-bottom-width: 1px;
    border-right-width: 1px;
  }

  /* Hide corner marks on small screens where they clutter the UI */
  @media (max-width: 768px) {
    .corner-marks {
      display: none;
    }
  }
</style>
