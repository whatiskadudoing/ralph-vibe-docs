---
/**
 * Showcase Section - Visual project grid
 * Inspired by Alche.studio's Works section
 */

interface Project {
  name: string;
  category: string;
  description: string;
  image?: string;
  github?: string;
  featured?: boolean;
}

const projects: Project[] = [
  {
    name: "ClaudeApp",
    category: "macOS App",
    description: "Native menu bar app for monitoring Claude Code usage limits with real-time tracking.",
    github: "https://github.com/whatiskadudoing/claudeapp",
    featured: true,
  },
];
---

<section id="showcase" class="showcase" aria-labelledby="showcase-heading">
  <div class="container">
    <header class="showcase-header">
      <div class="header-meta">
        <span class="meta-bracket">[</span>
        <span class="meta-text">Works</span>
        <span class="meta-bracket">]</span>
      </div>
      <h2 id="showcase-heading" class="showcase-title" data-scramble-reveal="Built with Ralph">Built with Ralph</h2>
      <p class="showcase-subtitle" data-scramble-reveal="This website was built autonomously while I was working on other projects. And enjoying a coffee.">This website was built autonomously while I was working on other projects. And enjoying a coffee.</p>
    </header>

    <div class="showcase-grid">
      {projects.map((project, index) => (
        <article class={`showcase-card ${project.featured ? 'showcase-card--featured' : ''}`}>
          <div class="card-content">
            <div class="card-header">
              <span class="card-number" data-scramble>{String(index + 1).padStart(2, '0')}</span>
              <span class="card-category">
                <span class="category-bracket">[</span>
                <span data-scramble>{project.category}</span>
                <span class="category-bracket">]</span>
              </span>
            </div>

            <h3 class="card-title" data-scramble>{project.name}</h3>
            <p class="card-description" data-scramble>{project.description}</p>

            {project.github && (
              <a
                href={project.github}
                target="_blank"
                rel="noopener noreferrer"
                class="card-link"
              >
                <span class="link-text" data-scramble>View Project</span>
                <svg class="link-arrow" width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M4 12L12 4M12 4H6M12 4V10" />
                </svg>
              </a>
            )}
          </div>

          <div class="card-visual">
            <div class="visual-placeholder">
              <span class="visual-number">{String(index + 1).padStart(2, '0')}</span>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .showcase {
    padding: var(--space-8) var(--space-5);
    background: var(--void);
    position: relative;
    z-index: 10;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .showcase-header {
    text-align: center;
    margin-bottom: var(--space-7);
  }

  .header-meta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    font-family: var(--font-mono);
    font-size: var(--text-bracket);
    letter-spacing: var(--tracking-wider);
    text-transform: uppercase;
    margin-bottom: var(--space-3);
  }

  .meta-bracket {
    color: var(--bracket);
  }

  .meta-text {
    color: var(--text-secondary);
  }

  .showcase-title {
    font-family: var(--font-sans);
    font-size: clamp(2rem, 5vw, var(--text-section));
    font-weight: 600;
    letter-spacing: var(--tracking-tight);
    color: var(--text-primary);
    margin: 0 0 var(--space-2);
  }

  .showcase-subtitle {
    font-family: var(--font-sans);
    font-size: 1rem;
    color: var(--text-secondary);
    margin: 0;
  }

  .showcase-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-4);
  }

  .showcase-card {
    display: grid;
    grid-template-columns: 1fr;
    background: var(--void-warm);
    border: 1px solid var(--concrete);
    border-radius: 16px;
    overflow: hidden;
    transition: border-color 0.3s var(--ease-smooth),
                transform 0.3s var(--ease-smooth),
                box-shadow 0.3s var(--ease-smooth);
  }

  .showcase-card:hover {
    border-color: var(--metal);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .showcase-card:hover .visual-number {
    opacity: 0.5 !important;
    transform: scale(1.05);
  }

  .showcase-card--featured {
    border-color: var(--signal-dim);
  }

  .showcase-card--featured:hover {
    border-color: var(--signal);
  }

  .card-content {
    padding: var(--space-5);
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 2;
  }

  .card-header {
    display: flex;
    align-items: baseline;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
  }

  .card-number {
    font-family: var(--font-mono);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-tertiary);
    letter-spacing: -0.02em;
  }

  .card-category {
    font-family: var(--font-mono);
    font-size: var(--text-bracket);
    letter-spacing: var(--tracking-wider);
    text-transform: uppercase;
    color: var(--text-secondary);
  }

  .category-bracket {
    color: var(--bracket);
  }

  .card-title {
    font-family: var(--font-sans);
    font-size: var(--text-card-title);
    font-weight: 600;
    color: var(--text-primary);
    letter-spacing: -0.01em;
    margin: 0 0 var(--space-2);
  }

  .card-description {
    font-family: var(--font-sans);
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0 0 var(--space-4);
    flex-grow: 1;
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-family: var(--font-sans);
    font-size: var(--text-code);
    font-weight: 500;
    color: var(--signal);
    text-decoration: none;
    transition: color 0.2s var(--ease-smooth),
                gap 0.2s var(--ease-smooth);
  }

  .card-link:hover {
    color: var(--signal-glow);
    gap: var(--space-3);
  }

  .link-arrow {
    transition: transform 0.2s var(--ease-smooth);
  }

  .card-link:hover .link-arrow {
    transform: translate(2px, -2px);
  }

  .card-visual {
    display: none;
    background: linear-gradient(135deg, var(--void-warm) 0%, var(--void) 100%);
    min-height: 240px;
    position: relative;
    overflow: hidden;
  }

  .visual-placeholder {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .visual-number {
    font-family: var(--font-mono);
    font-size: clamp(6rem, 15vw, 10rem);
    font-weight: 700;
    color: var(--metal);
    opacity: 0;
    letter-spacing: -0.05em;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  @media (min-width: 768px) {
    .showcase {
      padding: 100px var(--space-6);
    }

    .showcase-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-5);
    }

    .showcase-card--featured {
      grid-column: 1 / -1;
    }
  }

  @media (min-width: 1024px) {
    .showcase {
      padding: 120px var(--space-7);
    }

    .showcase-card {
      grid-template-columns: 1fr 1fr;
    }

    .showcase-card--featured {
      grid-column: 1 / -1;
    }

    .card-visual {
      display: block;
    }

    .card-content {
      padding: var(--space-6);
    }
  }
</style>
